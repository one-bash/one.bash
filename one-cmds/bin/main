#!/usr/bin/env bash
set -o errexit -o nounset -o pipefail -o errtrace
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit

if [[ -z ${ONE_DIR:-} ]]; then
	SCRIPT_DIR="$(cd -P -- "$(dirname -- "$0")" && pwd -P)"
	readonly SCRIPT_DIR
	export ONE_DIR=$SCRIPT_DIR/..
fi

# shellcheck source=../base-scripts.bash
. "$ONE_DIR/one-cmds/base-scripts.bash"

# shellcheck source=../mod-base.bash
. "$ONE_DIR/one-cmds/mod-base.bash"

actions=(list info enable disable)

declare -A action_aliases=(
	['e']=enable
	['d']=disable
	['l']=list
	['i']=info
)

# shellcheck disable=2034
readonly t=bin

# one.bash:completion
# one.bash:usage
usage() {
	# editorconfig-checker-disable
	cat <<EOF
Usage:  one bin [-h|--help] <ACTION>
        one bin [-h|--help]

Desc:   Manage executable files in ONE_REPO/bin/

ACTION:
  e, enable           Enable matched bin files
  d, disable          Disable matched bin files
  l, list             List available bin files
  i, info             Show the information of matched bin files
EOF
	# editorconfig-checker-enable
}

parse_cmd bin "$@"
